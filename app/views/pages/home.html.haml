.l-content--main.m-box
  %h2.m-headline Absolut Numbers
  .chart-container
.l-content--sidebar.m-box
  %h2.m-headline Achievements
  %ul.m-achivement-list{data: {bahaviour: "pusher_list"}}
    / - Achievement.order('created_at desc').first(7).each do |achievement|
    - @achieved_achievements.each do |achieved_achievement|
      %li.m-achivement
        = image_tag("coffee.png", class: 'm-achivement--icon')
        .m-achivement--headline= achieved_achievement.yet_another_kard.uid
        .m-achivement--text= achieved_achievement.achievement.title
        .m-achivement--text= achieved_achievement.achievement.description
